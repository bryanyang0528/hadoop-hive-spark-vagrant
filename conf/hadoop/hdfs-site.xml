  <name>dfs.namenode.name.dir</name>
  <value>file:///var/hadoop/hadoop-namenode</value>
 </property>
 <property>
  <name>dfs.datanode.data.dir</name>
  <value>file:///var/hadoop/hadoop-datanode</value>
 </property>
